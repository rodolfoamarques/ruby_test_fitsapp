<% provide(:title, 'New Message') %>
<h1>New Message</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@message) do |f| %>

      <% if @message.errors.any? %>
        <div id="error_explanation">

          <div class="alert alert-danger">
            The form contains <%= pluralize(@message.errors.count, "error") %>.
          </div>

          <ul>
          <% @message.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>

        </div>
      <% end %>

      <%= f.label :to_user %>
      <%= collection_select(:message, :to_user_id, User.all, :id, :name, {} ) %>

      <%= f.label :message %>
      <%= f.text_area :message, class: 'form-control' %>

      <%= f.hidden_field :from_user_id, :value => current_user.id %>

      <%= f.submit "Create message", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
